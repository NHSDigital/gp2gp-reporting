#!/bin/bash

set -Eeo pipefail

task="$1"
stack_env="$2"

case "${task}" in
  test)
      npm install
      npm run test
      ;;
  dojo-test)
      dojo "./tasks test"
      ;;
  build)
      npm install
      npm run build
      ;;
  dojo-build)
      dojo "./tasks build"
      ;;
  get-metrics)
      npm install
      npm run getMetrics
      ;;
  dojo-get-metrics)
      dojo "./tasks get-metrics"
      ;;
  get-metadata)
      npm install
      npm run getMetadata
      ;;
  dojo-get-metadata)
      dojo "./tasks get-metadata"
      ;;
  deploy)
      npm install
      npm run deploy
      ;;
  dojo-deploy)
      export ENVIRONMENT=${stack_env}
      dojo "./tasks deploy"
      ;;
  *)
      echo "Invalid command: '${task}'"
      exit 1
      ;;
esac

set +e
