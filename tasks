#!/bin/bash

set -Eeo pipefail

command="$1"

case "${command}" in
  _build)
      npm install
      npm run build
      # GoCD can not archive directories with broken symlinks
      # See: https://github.com/gocd/gocd/issues/1377#issuecomment-566103338
      # The following command deletes them
      find node_modules -type l -exec test ! -e {} \; -print | xargs rm
      ;;
  build)
      dojo "./tasks _build"
      ;;
  _deploy)
      npm deploy
      ;;
  deploy)
      dojo "./tasks _deploy"
      ;;
  *)
      echo "Invalid command: '${command}'"
      exit 1
      ;;
esac

set +e
