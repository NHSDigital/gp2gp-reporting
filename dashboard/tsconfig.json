{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "outDir": "./public",
    "rootDir": "./",
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node", "@testing-library/jest-dom", "react", "react-dom"]
  },
  "include": ["dashboard/src/**/*","dashboard/scripts/", "./custom.d.ts"],
  "exclude": ["node_modules"]
}
